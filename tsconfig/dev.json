{
  "compilerOptions": {
    "outDir": "../build/dev",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "../src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "pem",
    "resources",
    "scripts",
    "webpack"
  ],
  "types": [
    "typePatches"
  ]
}
